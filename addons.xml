<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.zapni.tv"
       name="zapni.tv"
       version="1.0.0"
       provider-name="lzoubek">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             provides="video"
             library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">zapni.tv</summary>
    <summary lang="cs">zapni.tv</summary>
    <description lang="en">Watch online content from zapnitv.biz</description>
    <description lang="cs">Sledujte online obsah ze servru zapnitv.biz</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.xbmc.czech"
       version="1.0.0"
       name="xbmc-czech-repo (github.com/lzoubek/xbmc-czech-repo)"
       provider-name="lzoubek">
  <requires>
    <import addon="xbmc.addon" version="0.1"/>
  </requires>
  <extension point="xbmc.addon.repository"
              name="xbmc-czech-repo">
    <info compressed="false">https://raw.github.com/lzoubek/xbmc-czech-repo/master/addons.xml</info>
    <checksum>https://raw.github.com/lzoubek/xbmc-czech-repo/master/addons.xml.md5</checksum>
    <datadir zip="true">https://raw.github.com/lzoubek/xbmc-czech-repo/master/repo</datadir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>xbmc-czech-repo (github.com/lzoubek/xbmc-czech-repo)</summary>
    <description>
    	This repository contains mostly video addons for czech users.

	Please send feedback, patches or fire any issues on https://github.com/lzoubek/xbmc-czech-repo
    </description>
    <description lang="cs">
    	Tento repozitář obsahuje video doplňky pro nás čechy a slováky.

	Máte-li jakékoliv poznámky, náměty, doplňky k začlenění nebo chcete nahlásit chybu, navštivte https://github.com/lzoubek/xbmc-czech-repo.
    </description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="script.module.stream.resolver"
       name="stream resolver"
       version="1.0"
       provider-name="lzoubek">
  <requires>
    <import addon="xbmc.python" version="1.0.0"/>
  </requires>
  <extension point="xbmc.python.module"
             library="lib" />
  <extension point="xbmc.addon.metadata">
    <summary>xbmc-czech-repo plugins common python modules mainly for resolving stream URLs</summary>
    <description>Common python modules pack that is used by xbmc-czech-repo plugins</description>
    <license>GNU GPL</license>
    <platform>all</platform>
  </extension>
</addon>

